{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/models"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules", "/"],
  "include": ["src/**/*", "modules.d.ts"]
}